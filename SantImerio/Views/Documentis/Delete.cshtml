}

<h2>Elimina documento</h2>
<hr />

<div class=" raw">
    <div class="col-sm-4">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Titolo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Titolo)
