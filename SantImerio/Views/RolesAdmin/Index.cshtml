@model IEnumerable<SantImerio.Models.RoleViewModel>

@{
    ViewBag.Title = "Gestione ruoli";
}

<h2>@ViewBag.Title</h2>
<p>
    <a class="btn btn-primary" href="~/RolesAdmin/Create"><span class="badge">@ViewBag.RolesCount </span> Nuovo</a>
</p>
<table class="table table-hover">
    @foreach (var item in ViewBag.Roles)
    {
        <tr>
            <td>
                <strong><em>@item.Name</em></strong>
            </td>
            <td>

                @Html.ActionLink("Edit", "Edit", new { id = @item.Id })
                @Html.ActionLink("Details", "Details", new { id = item.Id, usr = item.Name })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
            <td></td>
        </tr>
    }


</table>
