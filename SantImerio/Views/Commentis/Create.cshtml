@model SantImerio.Models.Commenti

@{
    ViewBag.Title = "Nuovo commento";
}

<h2>Lascia un commento per <strong><em>"@Request.QueryString["evento"]"</em></strong></h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Commento, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model=>model.Commento, new {@class="form-control"})
                @Html.ValidationMessageFor(model => model.Commento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
                <a href="@Url.Action("Evento", "Eventis", new {id = Request.QueryString["EId"]})" class="btn btn-primary">Annulla</a>
           </div>
        </div>
    </div>
}

