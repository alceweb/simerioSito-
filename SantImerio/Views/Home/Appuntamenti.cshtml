@model IEnumerable<SantImerio.Models.Eventi>

@{
    ViewBag.Title = "Appuntamenti";
}

<h2>@ViewBag.Message</h2>

<div class="label-info">Prima modalità. Per questa non è necessario inserire immagini ogni appuntamento</div>
@foreach (var item in Model)
{
    <hr class="hr1" />
        <!-- Button trigger modal -->
        <div class="col col-md-2">
            <button class="btn btn-primary" id="Button1" type="button" data-toggle="modal" data-target="#@item.Evento_Id">
                @item.Data.ToString("dd MMM yyyy")
            </button>
        </div>
                <div class="col col-md8">
                    <h2>@Html.DisplayFor(modelItem => item.Titolo)</h2>
                </div>
            <!-- Modal -->
                <div class="modal fade" id="@item.Evento_Id" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h2 class="modal-title" id="myModalLabel">@Html.DisplayFor(modelItem => item.Titolo)</h2>
                                <p class="badge">@item.Data.ToString("dddd dd-MMM-yyyy")</p>
                            </div>
                            <div class="modal-body">
                                <p>@Html.Raw(item.Descrizione)</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            </div>
                        </div>
                    </div>
                </div>
}
<div class="label-info">Seconda modalità.</div>

<div class="div4">

    @foreach (var item in Model)
    {
        <hr class="hr1" />
        <div class="row">
            <div class="col ">
                <a data-toggle="modal" data-target="#@item.Evento_Id" href="@Url.Action("Evento", "Home", new { id = item.Evento_Id })"><img src="@Url.Content("~/Content/Immagini/Eventi/" + item.Evento_Id + "/" + item.Evento_Id + ".jpg")" class="img-circle" alt="" /></a>

            </div>
            <div class="col ">
                <h4>@Html.ValueFor(modelItem => item.Data, "{0:dddd dd MMM yyyy}")</h4>
                <a data-toggle="modal" data-target="#@item.Evento_Id" href="@Url.Action("Evento", "Home", new { id = item.Evento_Id })">
                    <h2>@Html.DisplayFor(modelItem => item.Titolo)</h2>

                </a>

            </div>
        </div>
    }
</div>

<div class="label-info">Terza modalità.</div>

<div class="div1 content">

    @foreach (var item in Model)
    {
        <div class="text-center">
            <a data-toggle="modal" data-target="#@item.Evento_Id" href="@Url.Action("Evento", "Home", new { id = item.Evento_Id })"><img src="@Url.Content("~/Content/Immagini/Eventi/" + item.Evento_Id + "/" + item.Evento_Id + ".jpg")" alt="" /></a>            <h3>@item.Titolo</h3>
        </div>

    }
</div>
