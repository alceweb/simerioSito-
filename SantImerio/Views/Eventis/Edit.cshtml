@model SantImerio.Models.Eventi

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Eventi</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Evento_Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Titolo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Titolo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Titolo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SottoTitolo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SottoTitolo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SottoTitolo, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Descrizione, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Descrizione, new { @class = "ckeditor" })
                @Html.ValidationMessageFor(model => model.Descrizione, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Data, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*Incompatibilità jquery validation date per Chrome e FireFox*@
                @{ if (Request.Browser.Browser != "IE")
                    {
                        Html.EnableClientValidation(false);
                    }

                }
                @Html.TextBoxFor(model => model.Data, "{0:dd/MM/yyyy}", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Data, "", new { @class = "text-danger" })
                @{ Html.EnableClientValidation(true);}
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DataI, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @*Incompatibilità jquery validation date per Chrome e FireFox*@
                @{ if (Request.Browser.Browser != "IE")
                    {
                        Html.EnableClientValidation(false);
                    }

                }
                @Html.TextBoxFor(model => model.DataI, "{0:dd/MM/yyyy}", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DataI, "", new { @class = "text-danger" })
                @{ Html.EnableClientValidation(true);}
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DataF, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @*Incompatibilità jquery validation date per Chrome e FireFox*@
                @{ if (Request.Browser.Browser != "IE")
                    {
                        Html.EnableClientValidation(false);
                    }

                }
                @Html.TextBoxFor(model => model.DataF, "{0:dd/MM/yyyy}", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DataF, "", new { @class = "text-danger" })
                @{ Html.EnableClientValidation(true);}
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pubblica, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Pubblica) 
                    @Html.ValidationMessageFor(model => model.Pubblica, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Galleria, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Galleria)
                    @Html.ValidationMessageFor(model => model.Galleria, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Home, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Home) (Viene pubblictao nella home page sopra la foto di sfondo)
                    @Html.ValidationMessageFor(model => model.Home, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Volantino, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Volantino) (Nella pagina evento viene visualizzato il volantino al posto della descrizione)
                    @Html.ValidationMessageFor(model => model.Volantino, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Pastorale, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Pastorale) (Viene visualizzato nella home page sotto l'immagine di sfondo)
                    @Html.ValidationMessageFor(model => model.Pastorale, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>                    }

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/ckeditor/ckeditor.js")
    <script type="text/javascript">
        $('.datepicker').datepicker("option", "dateFormat", "dd/mm/yyyy");
    </script>

}
