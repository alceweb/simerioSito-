@model SantImerio.Models.ComRisp

@{
    ViewBag.Title = "Edit";
}

<h2>Modifica risposta</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ComRisp_Id)
        @Html.HiddenFor(model => model.Data)
        @Html.HiddenFor(model => model.Commento_Id)
        @Html.HiddenFor(model => model.UId)
        @Html.HiddenFor(model => model.Utente)

        <div class="form-group">
            @Html.LabelFor(model => model.Risposta, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Risposta, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Risposta, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salva" class="btn btn-success" />
                <a href="@Url.Action("Evento", "Eventis", new { id = Request.QueryString["EId"] })" class="btn btn-danger">Annulla</a>
            </div>
        </div>
    </div>
}
