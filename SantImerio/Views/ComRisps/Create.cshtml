@model SantImerio.Models.ComRisp

@{
    ViewBag.Title = "Create";
}

<h2>Rispondi al commento di</h2>
<h4>@Request.QueryString["utente"]</h4>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.LabelFor(model => model.Risposta, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Risposta, new {@class = "form-control" })
                @Html.ValidationMessageFor(model => model.Risposta, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
                @Html.ActionLink("Annulla", "Evento", "Eventis", new { id = Request.QueryString["EId"] }, new { @class = "btn btn-danger" })
            </div>
        </div>
    </div>
}
